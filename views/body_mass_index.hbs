<!-- HTML form for inputting weight and height -->
<form action="http://localhost:3000/process-BMI" method="POST">
  <label for="weight">Weight (kg):</label>
  <input type="number" id="weight" name="weight" required>
  <br>
  <label for="height">Height (m):</label>
  <input type="number" id="height" name="height" required>
  <br>
  <button type="submit">Calculate BMI</button>
</form>

<!-- Handlebars template to display the BMI calculation results -->
{{#if bmi}}
  <p>Your BMI is {{bmi.toFixed(1)}}.</p>
  <p>{{bmiInterpretation}}</p>
{{/if}}



<!-- HTML element where the BMI calculation results will be displayed -->
<div id="result"></div>